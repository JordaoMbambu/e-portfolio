{% extends 'base.html.twig' %}

{% block title %}Contactez-moi{% endblock %}

{% block body %}
<div class="section">
    <h2>Contact <br><span class="text-blue">Formulaire</span></h2>
    <form id="contact-form" method="POST" action="/send-message">
        <div class="form-group">
            <label for="contact-name">Nom :</label>
            <input type="text" id="contact-name" name="contact-name" required>
        </div>
        <div class="form-group">
            <label for="contact-email">Email :</label>
            <input type="email" id="contact-email" name="contact-email" required>
        </div>
        <div class="form-group">
            <label for="contact-message">Message :</label>
            <textarea id="contact-message" name="contact-message" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>
</div>
{% endblock %}